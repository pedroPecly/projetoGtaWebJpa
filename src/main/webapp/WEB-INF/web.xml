<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>PerfilSrv</servlet-name>
        <servlet-class>controller.PerfilSrv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginSrv</servlet-name>
        <servlet-class>controller.LoginSrv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GamesSrv</servlet-name>
        <servlet-class>controller.GamesSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PerfilSrv</servlet-name>
        <url-pattern>/PerfilSrv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginSrv</servlet-name>
        <url-pattern>/LoginSrv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GamesSrv</servlet-name>
        <url-pattern>/GamesSrv</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
